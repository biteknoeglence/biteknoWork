@model EntityLayer.Concrete.Member
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/SideLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Üye Kayıt Sayfası</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">

                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                <form action="#" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail Adresiniz</label>
                        @Html.TextBoxFor(x => x.MemberMail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.MemberMail, "", new { @class = "text-danger" })

                        @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">*@
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        @Html.TextBoxFor(x => x.MemberPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.MemberPassword, "", new { @class = "text-danger" })

                        @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="" required="">*@
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                    </div>
                    <button type="submit" id="btn1" class="readmore">Gönder</button>
                    <p><a href="register.html"> Şifremi unuttum?</a></p>
                </form>
                }
                </div>
        </div>
    </div>
</section>